<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wjx.oauth.dao.UserDao">
    <resultMap id="BaseResultMap" type="com.wjx.oauth.domain.User">
        <id column="id" property="id"/>
        <result column="account" property="account"/>
        <result column="passwd" property="passwd"/>
        <result column="thirdId" property="thirdId"/>
        <result column="name" property="name"/>
    </resultMap>
    <select id="getUserByAccount" parameterType="java.lang.String" resultMap="BaseResultMap">
      select id,account,passwd,thirdId,name from oauth where account = #{account};
    </select>

    <insert id="register" parameterType="com.wjx.oauth.domain.User">
        insert into oauth(account,passwd,name)values(#{account},#{passwd},#{name})
    </insert>
</mapper>